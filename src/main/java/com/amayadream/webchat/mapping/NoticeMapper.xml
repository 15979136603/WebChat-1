<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.amayadream.webchat.dao.INoticeDao">

    <resultMap id="BaseResultMap" type="com.amayadream.webchat.pojo.Notice">
        <id column="toUserid" property="toUserid" jdbcType="VARCHAR"/>
        <result column="fromUserid" property="fromUserid" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
    </resultMap>

    <!--<sql id="Base_Column_List">-->
        <!--to, from, content-->
    <!--</sql>-->

    <!-- 根据用户id查询通知 -->
    <select id="selectNoticeByUserid" resultType="com.amayadream.webchat.pojo.Notice" parameterType="string">
        SELECT *
        FROM notice
        WHERE toUserid = #{userid, jdbcType=VARCHAR}
    </select>

    <!-- 插入通知 -->
    <insert id="addNotice" parameterType="com.amayadream.webchat.pojo.Notice">
        INSERT INTO notice (toUserid,fromUserid,content)
        VALUES (#{toUserid, jdbcType=VARCHAR}, #{fromUserid, jdbcType=VARCHAR}, #{content, jdbcType=VARCHAR})
    </insert>

    <!-- 根据用户id删除通知 -->
    <delete id="deleteNotice" parameterType="string">
        DELETE FROM notice
        WHERE fromUserid = #{userid, jdbcType=VARCHAR}
    </delete>

</mapper>